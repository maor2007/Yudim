public class Shiur3 
{
	public static void main(String[] args) 
	{
		Scanner scan= new Scanner(System.in);
		System.out.println("enter a 3 letter word: ");
		String str = scan.next();
		System.out.println(str.charAt(2)+""+str.charAt(1)+""+str.charAt(0));
		
	}


}


