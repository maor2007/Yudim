package yudim;
import java.util.Scanner;


public class Shiur3 
{
	public static void main(String[] args) 
	{
		
		int num1;
		int num2;
		
		Scanner scan= new Scanner(System.in);
		System.out.println("enter number: ");
		num1=scan.nextInt();
		System.out.println("enter number: ");
		num2=scan.nextInt();
		
		if(num1<num2)
			System.out.println(num1+" is less then "+num2);
		else
			System.out.println(num2+" is less then "+num1);
	}


}

//shiur 3 sheela 3

package yudim;
import java.util.Scanner;


public class Shiur3 
{
	public static void main(String[] args) 
	{
		
		char letter1;
		char letter2;
		int distance1;
		int distance2;
		int speed1;
		int speed2;
		int rider1;
		int rider2;

		
		Scanner scan= new Scanner(System.in);
		System.out.println("enter bike letter: ");
		letter1=scan.next().charAt(0);
		System.out.println("enter second bike letter: ");
		letter2=scan.next().charAt(0);
		
		System.out.println("enter distance for "+letter1);
		distance1=scan.nextInt();
		System.out.println("enter second distance for "+letter2);
		distance2=scan.nextInt();
		
		System.out.println("enter speed for "+letter1);
		speed1=scan.nextInt();
		System.out.println("enter second speed for "+letter2);
		speed2=scan.nextInt();
		
		rider1 = distance1 * speed1;
		rider2 = distance2 * speed2;
		
		if(rider1 > rider2)
			System.out.println(letter2);
		else
			System.out.println(letter1);
		
	}


}


