package yudim;
import java.util.Scanner;


public class Shiur3 
{
	public static void main(String[] args) 
	{
		
		Scanner scan= new Scanner(System.in);
		
		int subjects;
		String school;
		String name;
		
		System.out.println("enter your full name: ");
		name = scan.nextLine();
		System.out.println("enter your school name: ");
		school = scan.nextLine();
		System.out.println("how many subjects do you have? ");
		subjects = scan.nextInt();
		
		System.out.println("My name is "+name+", My school is "+school+", The number of subjects I study is "+subjects);
		
		
	}


}

//shuir 3 sheela 8


package yudim;
import java.util.Scanner;


public class Shiur3 
{
	public static void main(String[] args) 
	{
		
		Scanner scan= new Scanner(System.in);
		
		int num1;
		int num2;
		int num3;
		int all;
		
		System.out.println("enter a 3 digit number: ");
		num1 = scan.nextInt();
		System.out.println("enter a second 3 digit number: ");
		num2 = scan.nextInt();
		System.out.println("enter a third 3 digit number: ");
		num3 = scan.nextInt();
		
		all = num1 + num2 + num3;
		
		if(all % 2 == 0)
			System.out.println("the number in even");
		else
			System.out.println("the number in odd");
		
	}


}
