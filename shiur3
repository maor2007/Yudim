package yudim;
import java.util.Scanner;


public class Shiur3 
{
	public static void main(String[] args) 
	{
		
		int num;
		
		Scanner scan= new Scanner(System.in);
		System.out.println("enter number: ");
		num=scan.nextInt();
		
		if(num<0)
			System.out.println("the number is not povitive");
		else
			System.out.println("the number is povitive");
	}


}


